#!/bin/bash
fetch_lyrics () {
	song=`curl -s --get "https://makeitpersonal.co/lyrics" --data-urlencode "artist=$artist" --data-urlencode "title=$title"`;
}

artist=$1
title=$2
fetch_lyrics
if [ "$song" == "Sorry, We don't have lyrics for this song yet." ]; then
	title=$1
	artist=$2
	fetch_lyrics
fi

echo -e "$artist - $title\n$song"


